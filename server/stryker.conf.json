{
  "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "_comment": "This config tells Stryker where your tests and code are",
  "packageManager": "npm",
  "reporters": [
    "html",
    "clear-text",
    "progress"
  ],
  "testRunner": "mocha",
  "testRunner_comment": "Use the mocha runner we installed",
  "coverageAnalysis": "perTest",
  "mutate": [
    "controllers/imageController.js",
    "middlewares/auth.js"
  ],
  "mochaOptions": {
    "spec": ["test/**/*.js"],
    "require": []
  }
}